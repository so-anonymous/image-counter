<script>
    const namespace = "majmun_counter_haha";
    const key = "image";

    fetch(`https://api.countapi.xyz/create?namespace=${namespace}&key=${key}&value=0`)
        .then(() => fetch(`https://api.countapi.xyz/hit/${namespace}/${key}`))
        .then(res => res.json())
        .then(data => {
            document.getElementById("views").innerText = data.value;
        })
        .catch(() => {
            document.getElementById("views").innerText = "N/A";
        });
</script>

